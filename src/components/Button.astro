---

interface Props {
  title?: string;
  rounded?: string;
  onclick?: any;
  id?: string;
}

const { rounded, onclick, id } = Astro.props;
---

<button  onclick={onclick}
id={id}
class={`custom-btn text-xl max-h-[50px] shadow-custom active:shadow-none
 active:translate-x-[3px] active:translate-y-[3px] text-gray-200 px-5 py-2
  border border-white hover:transition ease-in-out delay-150 hover:-translate-y-1
   hover:scale-110 hover:bg-gray-600 duration-300 bg-gray-900 cursor-pointer ${
  rounded ? "rounded-none" : "rounded-none"
  }`},
  
>
  <slot />
</button>
