---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import AboutMe from "../components/AboutMe.astro";
import MyProjects from "../components/MyProjects.astro";
import { Icon } from "astro-icon/components";
---
<script>
  import { stagger, spring, timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Andres Mesa"
  description="Creative Coder & Data Analyst"
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <MyProjects />

    <AboutMe />

    <Card
    colSpan="md:col-span-1"
    rowSpan="md:row-span-1"
    title="Explore & Play"
    href="https://touchconcepts1.netlify.app/"
    colorText="text-primary-500"
  >


<div class="group relative">
  <Icon
    name="ri:triangle-line"
    class="h-6 float-right group-hover:hidden transition-transform ease-in-out duration-100 z-20"
  />
  <Icon
    name="ri:triangle-fill"
    class="h-6 float-right hidden group-hover:block group-hover:text-white group-hover:translate-x--1 group-hover:-translate-y-1 transition-transform ease-in-out duration-100 z-20"
  />
</div>
    
  </Card>
    
    <Card
    colSpan="md:col-span-1"
    rowSpan="md:row-span-1"
    title="ArtWork"
    href="/artwork"
  >
  <div class="group relative">
    <Icon
      name="ri:square-line"
      class="h-6 float-right group-hover:hidden transition-transform ease-in-out duration-100 z-20"
    />
    <Icon
      name="ri:square-fill"
      class="h-6 float-right hidden group-hover:block group-hover:text-white group-hover:translate-x--1 group-hover:-translate-y-1 transition-transform ease-in-out duration-100 z-20"
    />
  </div>
    <div class="h-full w-full item-justify absolute inset-0 -z-10 bg-center bg-top">
      <img src="7gRx.gif" class="object-cover h-full w-full" />
    </div>
  </Card>

  <Card
  colSpan="md:col-span-1"
  rowSpan="md:row-span-1"
  title="Blog"
  href="/blog"
>  
<div class="group relative">
  <Icon
    name="ri:circle-line"
    class="h-6 float-right group-hover:hidden transition-transform ease-in-out duration-100 z-20"
  />
  <Icon
    name="ri:circle-fill"
    class="h-6 float-right hidden group-hover:block group-hover:text-white group-hover:translate-x--1 group-hover:-translate-y-1 transition-transform ease-in-out duration-100 z-20"
  />
</div>
</Card>
    <ContactsCard />

  </main>
</Layout>

