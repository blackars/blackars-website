---
import Layout from "../../layouts/Layout.astro";

const works = await Astro.glob('../../content/work/*.md');

// Asegurarse de que cada trabajo tenga un slug
const worksWithSlugs = works.map(work => ({
  ...work,
  frontmatter: {
    ...work.frontmatter,
    // Genera un slug desde el nombre del archivo si no existe en el frontmatter
    slug: work.frontmatter.slug || work.file.split('/').pop()?.replace('.md', '')
  }
}));
---

<script>
  import { timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../../lib/constants";

  const sequence = [loaderAnimation];
  timeline(sequence as TimelineDefinition);
</script>

<Layout title="Andres Mesa - Artwork" description="Creative coder">
  <main class="w-screen min-h-screen p-8">
    <div class="max-w-6xl mx-auto">
      <a href="../" class="text-white bg-neutral-900 hover:bg-neutral-800 px-4 py-2 mb-8 border-0 border-solid border-white rounded-none inline-block">
        Back
      </a>
      <h1 class="text-4xl font-bold mb-8 text-neutral-100">ARTWORK</h1>
      
      <div class="grid grid-cols-2 gap-8">
        {worksWithSlugs.map((work) => (
          <a href={`/artwork/${work.frontmatter.slug}`} class="group block">
            <article class="overflow-hidden bg-neutral-900 rounded-none">
              <div class="relative w-full pb-[56.25%] bg-neutral-800">
                {work.frontmatter.image && (
                  <img
                    src={work.frontmatter.image}
                    alt={work.frontmatter.title}
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                )}
              </div>
              <div class="p-4">
                <h2 class="text-md font-bold text-neutral-100 mb-2">
                  {work.frontmatter.title}
                </h2>
                <p class="text-neutral-400 text-sm">
                  {work.frontmatter.description}
                </p>
              </div>
            </article>
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout>
